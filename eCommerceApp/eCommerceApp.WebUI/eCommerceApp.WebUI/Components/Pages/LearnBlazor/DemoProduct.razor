@page "/learnBlazor/demoProduct"
@rendermode InteractiveServer


<h2 class="text-success">DemoProduct</h2>
<div class="row mt-2 p-2 border" style="background-color: azure">

    @foreach (var product in Products)
    {
        <div class="bg-light border p-2 col-6">
            <h4 class="text-secondary"> Product - @product.Id </h4>
            <p>
                Name - @product.Name
            </p>
            <p>
                Show Properties: <input type="checkbox" @bind-value="@product.IsActive" checked="@(product.IsActive?"checked":null)" />
            </p>
            @if(product.IsActive)
            {
                @foreach (var property in product.ProductProperties)
                {
                    <p>
                        @property.Key - @property.Value
                    </p>
                }
            }
            <br />
            <_EditDeleteButton IsActive="@product.IsActive">
            </_EditDeleteButton>
        </div>
    }
</div>



@code {
    List<Demo_Product> Products = new();

    protected override void OnInitialized()
    {
        Products.Add(new()
        {
                Id = 1,
                Name = "Midnight Blaze",
                IsActive = false,
                Price = 14.99,
                ProductProperties = new()
                {
                    new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Rose"},
                    new Demo_ProductProp { Id = 2, Key = "Size", Value = "20oz"},
                    new Demo_ProductProp { Id = 3, Key = "Color", Value="Purple" }
                }
        });

        Products.Add(new()
        {
                Id = 2,
                Name = "Blossom Lily",
                IsActive = true,
                Price = 12.99,
                ProductProperties = new()
                {
                    new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Lily" },
                    new Demo_ProductProp { Id = 2, Key = "Size", Value = "18oz" },
                    new Demo_ProductProp {Id = 3,Key = "Color",Value = "White"}
                }
        });
    }
}
